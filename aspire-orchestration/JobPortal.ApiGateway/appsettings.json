{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "aggregator-route": {
        "ClusterId": "aggregator-cluster",
        "Match": {
          "Path": "/api/aggregate/{**catch-all}"
        }
      },
      "application-route": {
        "ClusterId": "application-cluster",
        "Match": {
          "Path": "/api/application/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/application"
          }
        ]
      },
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "/api/catalog/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/catalog"
          }
        ]
      },
      "review-route": {
        "ClusterId": "review-cluster",
        "Match": {
          "Path": "/api/review/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/review"
          }
        ]
      }
    },
    "Clusters": {
      "aggregator-cluster": {
        "Destinations": {
          "primary": {
            "Address": "http://aggregator"
          }
        }
      },
      "application-cluster": {
        "Destinations": {
          "primary": {
            "Address": "http://application-service"
          }
        }
      },
      "catalog-cluster": {
        "Destinations": {
          "primary": {
            "Address": "http://catalog-service"
          }
        }
      },
      "review-cluster": {
        "Destinations": {
          "primary": {
            "Address": "http://review-service"
          }
        }
      }
    }
  }
}
